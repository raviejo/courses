<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
      <li>
        <form class="delete" action="/lists/<%= @list[:id] %>/destroy" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
  <form action="/lists/<%= @list[:id] %>" method="post">
    <dl>
      <dt>
        <label for="list_name">Enter the new name for the list:</label>
      </dt>
      <dd>
        <input name="list_name" placeholder="<%= params[:list_name] || @current_name %>" type="text" value="">
      </dd>
    </dl>
    <fieldset class="actions">
      <input type="submit" value="Save">
      <a href="/lists/<%= @list[:id] %>">Cancel</a>
    </fieldset>
  </form>
</section>
